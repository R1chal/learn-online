<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.richal.learnonline.mapper.CourseTeacherMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.richal.learnonline.domain.CourseTeacher">
        <id column="id" property="id" />
        <result column="teacher_id" property="teacherId" />
        <result column="course_id" property="courseId" />
    </resultMap>

    <select id="selectTeachersByCourseId" resultType="com.richal.learnonline.domain.Teacher">
        SELECT 
            t.id,
            t.name,
            t.intro,
            t.technology,
            t.position,
            t.head_img headImg,
            t.tags
        FROM 
            t_course_teacher ct
            INNER JOIN t_teacher t ON ct.teacher_id = t.id
        WHERE 
            course_id = #{courseId}
    </select>

</mapper>
