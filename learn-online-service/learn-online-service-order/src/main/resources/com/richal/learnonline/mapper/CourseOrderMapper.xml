<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.richal.learnonline.mapper.CourseOrderMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.richal.learnonline.domain.CourseOrder">
        <id column="id" property="id" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="order_no" property="orderNo" />
        <result column="total_amount" property="totalAmount" />
        <result column="total_count" property="totalCount" />
        <result column="status_order" property="statusOrder" />
        <result column="user_id" property="userId" />
        <result column="title" property="title" />
        <result column="version" property="version" />
        <result column="pay_type" property="payType" />
    </resultMap>
    <update id="updateOrderStatus">
        UPDATE t_course_order
        SET status_order=#{statusOrder},update_time={updateTime}
        WHERE order_no=#{orderNo}
    </update>

</mapper>
